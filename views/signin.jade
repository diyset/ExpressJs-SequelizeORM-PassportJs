extends layout

block content

    nav#siteNav.navbar-default.navbar-fixed-top(role="navigation")
        .container
            .navbar-header
                button.navbar-toggle(type="button", data-toggle="collapse", data-target="#navbar")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="#")
                    span.glyphicon.glyphicon-fire LOGO
            #navbar.collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href="/index") Home
                    li
                        a(href="#") Product
                    li.active
                        if profile == null
                            a(href="/signin") Login 
                        else
                            a Welcome, #{profile.full_name}
                    li
                        a(href='/signup') Sign Up        
                    li
                        a(href="#") Contact  
    header
        .header-content
            .login
            section
                .container
                    h1.text-center Welcome To
                            .card.card-container
                                h2.login_title.text-center Login
                                #message
                                    if message
                                    p #{message}
                                    form.form-signin(method='POST' action='/signin' id="signin"  name="signin")
                                        span#reauth-email.reauth-email
                                        label(for="email").input_title Email
                                        input#inputEmail.login_box(type='text', placeholder='Enter your username/email', required='', autofocus='' name='email')
                                        label(for="password").input_title Password
                                        input#inputPassword.login_box(type='password', placeholder='******', required='' name='password')
                                        #remember.checkbox
                                            label
                                            button.btn.btn-lg.btn-primary(type='submit') Login
                                            br
                                    form.form-signin(method="get" action="/signup")        
                                        button.btn.btn-lg.btn-danger(type='submit') Sign Up
