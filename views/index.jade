extends layout

  
block content

  nav#siteNav.navbar-default.navbar-fixed-top(role="navigation")
    .container
      .navbar-header
        button.navbar-toggle(type="button", data-toggle="collapse", data-target="#navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#")
          span.glyphicon.glyphicon-fire LOGO
      #navbar.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li.active
            a(href="#") Home
          li
            a(href="#{product}") Product
          li.dropdown
            if profile == null
              a(href="/signin") Login
            else
              a.dropdown-toggle(data-toggle="dropdown" href="#") Welcome, #{profile.firstname}
                span.caret
                  ul.dropdown-menu
                      li
                        a.dropdown-item(href="/detailprofile") Detail Profile
          if profile == null
            li
              a(href='/signupv2') Sign Up
          li
            a(href="#") Contact  
          li
            if profile !=null
               a(href="/logout") Logout
  //- HEADER
  header
    .header-content
      .header-content-inner
        h1= title
        p DUMMY UNTUK INDEX
        a.btn.btn-primary.bnt-lg(href="#") Coba Sekarang

  //- Section
  section.intro
    .container
      .row
        .col-lg-8.col-lg-offset-2
          span.glyphicon.glyphicon-apple(style="font-size: 60px")
          h2.section-heading=title
          p.text-light=title




