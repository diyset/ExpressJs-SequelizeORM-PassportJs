extends layout

block content

    nav#siteNav.navbar-default.navbar-fixed-top(role="navigation")
        .container
            .navbar-header
                button.navbar-toggle(type="button", data-toggle="collapse", data-target="#navbar")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="#")
                    span.glyphicon.glyphicon-fire LOGO
            #navbar.collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href="/index") Home
                    li
                        a(href="#") Product
                    li
                        if profile == null
                            a(href="/signin") Login 
                        else
                            a Welcome, #{profile.full_name}
                    li.active
                        a(href='/signup') Sign Up        
                    li
                        a(href="#") Contact  
    
            
                        
    header
        .header-content
            .login
            section
                    .container
                        br
                        br
                        br
                        br
                        br
                        br
                        h1.text-center Welcome To
                                .card.card-container
                                    h2.login_title.text-center Sign Up
                                    h2.text-center #{message}
                                        form.form-signin(action="/signup",id="signup",name="signup", method="POST")
                                            label(for="email") Email Address
                                            input#inputEmail.login_box(type="email",class="text", name="email")
                                            label(for="firstname").input_title First Name
                                            input#inputEmail.login_box(type="text" class="text" name="firstname")
                                            label(for="lastname") Last Name
                                            input#inputEmail.login_box(type="text" class="text" name="lastname")
                                            label(for="username") Username
                                            input#inputEmail.login_box(type="text" class="text" name="username" )
                                            label(for="password") Password
                                            input#inputPassword.login_box(type="password" name="password")
                                            label(for="password") Confirm Password
                                            input#inputPassword.login_box(type="password" name="confirmPassword")
                                            br
                                            #remember.checkbox
                                                button.btn.btn-lg.btn-danger(type='submit') Sign Up
